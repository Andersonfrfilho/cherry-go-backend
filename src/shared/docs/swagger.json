    "/v1/users/clients": {
      "post": {
        "tags": [
          "Users Clients"
        ],
        "summary": "Create a new client user",
        "description": "Create a new client user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "last_name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "cpf": {
                    "type": "string",
                    "maximum": 11
                  },
                  "rg": {
                    "type": "string",
                    "maximum": 9,
                    "minimum": 8
                  },
                  "password": {
                    "type": "string"
                  },
                  "password_confirm": {
                    "type": "string"
                  },
                  "birth_date": {
                    "type": "string",
                    "format": "date"
                  }
                },
                "example": {
                  "name": "Name",
                  "last_name": "Lastname",
                  "cpf": "12345678910",
                  "rg": "123456789",
                  "email": "e@mail.com",
                  "password": "password",
                  "password_confirm": "password",
                  "birth_date": "2021-05-27T04:10:42.732Z"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "name": {
                      "type": "string"
                    },
                    "last_name": {
                      "type": "string"
                    },
                    "cpf": {
                      "type": "string"
                    },
                    "rg": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "active": {
                      "type": "boolean"
                    }
                  },
                  "example": {
                    "id": "Name",
                    "name": "Name",
                    "last_name": "Lastname",
                    "cpf": "12345678910",
                    "rg": "123456789",
                    "email": "e@mail.com",
                    "active": true
                  }
                }
              }
            }
          },
          "400": {
            "description": "User client already exist",
            "content": {
              "application/json": {
                "schema":{
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema":{
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
