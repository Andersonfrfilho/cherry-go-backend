              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user":{
                      "type":"object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "format": "uuid"
                        },
                        "name": {
                          "type": "string"
                        },
                        "last_name": {
                          "type": "string"
                        },
                        "cpf": {
